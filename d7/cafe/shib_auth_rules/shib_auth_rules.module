<?php

/**
 * Implements hook_user_login().
 */
function shib_auth_rules_user_login(&$edit, $account) {
  // If there is a valid Shibboleth session.
  if (shib_auth_session_valid()) {
    // Invoke the Rules event "user_login_shibboleth".
    rules_invoke_event('user_login_shibboleth', $account);
  }
}
